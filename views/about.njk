{% extends "layout.njk" %}

{% block head %}
    <title> Sobre - Lucas Santos</title>

{% endblock %}

{% block content %}

<div id="wrapper">
    <img src="{{about.avatar_url}}" alt="{{about.title}}">
    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>
    <p>{{about.description}}</p>
</div>

<div id="links-footer" class="links">
    {% for link in about.links %}
    <a href="{{ link.url }}" target="_blanck">{{ link.name }}</a>
    {% endfor %}
</div>

{% endblock %}